<html lang="en">

<body>
	<div style="width:80%; margin: auto;">
		<h1>Add Items to Pantry</h1>
		<form id="addBarcodeForm" action="/addBarcode">
			<div>
				<label for="barcode">Barcode</label>
				<input type="text" name="barcode" id="barcodeInput">
			</div>
			
			<div id="formBottom">
				<div>
					<label for="itemName">Item Name</label>
					<input type="text" name="itemName">
				</div>	
				
				<div>
					<label for="defaultQuantity">Default Quantity</label>
					<input type="number" name="defaultQuantity">
				</div>
				<div>
					<label for="UOM">Unit of Measure</label>
					<input type="text" name="UOM">
				</div>
				<div>
				
					<label for="category">Category</label>
					<input type="text" name="category">
				</div>
				<a id="formSubmit" href="#">Submit Form</a>
			</div>
		</form>
		<button id="showFormButton">Show Form</button>
	</div>

	<div class="container">
		<div id="addButtonDiv">
			<a id="addToPantryButton" href="#">Add Items to Pantry</a>
		</div>
		
		<div class="row header">
			<div class="col col-sm-2">Barcode</div>
			<div class="col col-sm-3">Item Name</div>
			<div class="col col-sm-2">Quantity</div>
			<div class="col col-sm-1">Unit</div>
			<div class="col col-sm-2">Category</div>
			<div class="col col-sm-1">Edit</div>
			<div class="col col-sm-1">Delete</div>
		</div>
		{{#if items}}
			{{#each items}}
				<div id={{this._id}} class="row">
					<div class="col col-sm-2 barcodeCol">{{this.barcode}}</div>
					<div class="col col-sm-3 itemNameCol">{{this.itemName}}</div>
					<div class="col col-sm-2 quantityCol">{{this.quantity}}</div>
					<div class="col col-sm-1 UOMCol">{{this.UOM}}</div>
					<div class="col col-sm-2 categoryCol">{{this.category}}</div>
					<div class="col col-sm-1 iconCol editButton"><a href="#"><img src="assets/img/editIcon.png" width="25px"></a></div>
					<div class="col col-sm-1 iconCol deleteButton"><a href="#"><img src="assets/img/deleteIcon.png" width="25px"></a></div>
				</div>
			{{/each}}
		{{/if}}
	</div>

		
<script type="text/javascript" src="/assets/addItems.js"></script>
<script type="text/javascript">
	document.getElementById("addItemTab").classList.add("active");
</script>
</body>

</html>